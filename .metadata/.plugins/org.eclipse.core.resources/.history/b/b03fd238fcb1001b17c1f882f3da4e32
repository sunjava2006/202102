package com.thzhima.base;

public class ArithmaticOp {

	public static void main(String[] args) {
		//    加号（+）
		//	     减号（-）
		//	     乘号（*）
		//	     除号（/）
		//	     取模（%）
		//	    自增运算符（++）
		//	    自减运算符（--）
		
		int a =  1 + 2;
		System.out.println(a);
		
		a = a - 1;
		System.out.println(a);
		
		a = a * 2; // "*" 号是乘法运算符
		System.out.println(a);
		
		a = a / 3; // "/" 是除法运算符。
		System.out.println(a);

		
		
	}
}
